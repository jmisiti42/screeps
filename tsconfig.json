{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "es2018",
      "dom"
    ],
    "module": "amd",
    "moduleResolution": "node",
    "outDir": "./dist",
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "inlineSourceMap": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
